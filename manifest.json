{
  "manifest_version": 2,
  "name": "Address Checker",
  "description": "This extension detect your address of Amazon EC site.",
  "version": "1.0.0",
  "icons": {
    "16": "images/icon/icon_16.png",
    "48": "images/icon/icon_48.png",
    "128": "images/icon/icon_128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon/icon_19.png",
      "38": "images/icon/icon_38.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "css": ["css/style.css"],
      "js": ["js/jquery-2.1.1.min.js", "js/background.js"]
    }
  ]
}